<Window x:Class="Marmalade_Global.EmployeeSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marmalade_Global"
        mc:Ignorable="d"
        Title="EmployeeSchedule" Height="600" Width="300">
    <Grid>
        <Label x:Name="name" Content="John Marmalade" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="16" VerticalAlignment="Top"/>
        <Label x:Name="phone" HorizontalContentAlignment="Center" Content="+45 14 86 83 75" Margin="0,25,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="daySelect" SelectionChanged="daySelect_SelectionChanged" ToolTip="Selects the day for which you want to see the schedule" Margin="50,80,50,0" VerticalAlignment="Top"/>
        <ScrollViewer Margin="0,107,0,0">
            <StackPanel Name="stack"/>

        </ScrollViewer>
    </Grid>
</Window>
