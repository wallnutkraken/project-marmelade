<Window x:Class="Marmalade_Global.PlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marmalade_Global"
        mc:Ignorable="d"
        Title="PlantWindow" Height="300" Width="300">
    <Grid>
        <Grid>
            <Grid HorizontalAlignment="Left" Height="249" Margin="10,10,0,0" VerticalAlignment="Top" Width="272">
                <Label x:Name="label" Content="Choose Action" HorizontalAlignment="Left" Margin="43,10,0,0" VerticalAlignment="Top" Height="42" Width="191" FontSize="26.667" FontWeight="Bold"/>
                <Button x:Name="btnRegisterPlant" Content="Register Plant" HorizontalAlignment="Left" Margin="43,64,0,0" VerticalAlignment="Top" Width="191" Height="34" Click="btnRegisterPlant_Click" Cursor="Hand" FontWeight="Bold"/>
                <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="43,210,0,0" VerticalAlignment="Top" Width="191" Height="29" FontSize="16" Background="#FFDE0D0D" FontWeight="Bold" Foreground="White" Click="btnExit_Click" Cursor="Hand"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
